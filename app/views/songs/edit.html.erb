<h1>Update a Song</h1>
<%= form_for @song do |f| %>

  <div >
    <%= f.label "Title" %>
    <%= f.text_field :title %>
  </div>

  <div >
    <%= f.label "Released?" %>
    <%= f.check_box :released %>
  </div>

  <div >
    <%= f.label "Release Year" %>
    <%= f.number_field :release_year %>
  </div>

  <div >
    <%= f.label "Artist Name" %>
    <%= f.text_field :artist_name %>
  </div>

  <div >
    <%= f.label "Genre" %>
    <%= f.text_field :genre %>
  </div>

  <%= f.submit "Update Song" %>
<% end %>
